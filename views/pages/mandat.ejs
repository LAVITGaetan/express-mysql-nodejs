<%- include('includes/header.ejs') %>


    <body>
        <div class="layout">

            <div class="layout-header">
                <h1 class="header-title">Mandat et ses portraits</h1>
            </div>
            <%- include('includes/navbar.ejs') %>
                <div class="layout-content">

<div class="ctd" onclick="deleteMandat('<%= mandat[0].id %>')">Supprimer</div>
                    <div class="container full">
                        <div class="container-header">
                            <%= mandat[0].label %>
                        </div>

                        <div class="container-row"><span class="row-label">Nom : </span>
                            <%= mandat[0].nom %>
                        </div>
                        <div class="container-row"><span class="row-label">Catégorie : </span>
                            <%= mandat[0].categorie %>
                        </div>
                        <div class="container-row"><span class="row-label">Composition : </span>
                            <%= mandat[0].composition %>
                        </div>
                        <div class="container-row"><span class="row-label">Mission : </span>
                            <%= mandat[0].mission %>
                        </div>
                        <div class="container-row"><span class="row-label">Renouvellement : </span>
                            <%= mandat[0].renouvellement %>
                        </div>
                        <div class="container-row"><span class="row-label">Durée : </span>
                            <%= mandat[0].duree %>
                        </div>
                        <div class="container-action"><a href="/edit-mandat?id=<%= mandat[0].id %>"
                                class="container-cta">Modifier</div></a>
                    </div>
<div class="flex-between"><h2 class="subtitle">Portraits liés</h2><div class="cta" onclick="showModal()">Lier un portrait</div>
</div>
                    
                    <div class="flex">

                        
                        <% representations.forEach(representation=> { %>




                            <div class="portrait-card">
                                <div class="card-header"></div>
                                <div class="card-figure">
                                    <img class="card-image"
                                        src="<%= portraits.find(el => el.id === representation.id_portrait).image %>">
                                </div>
                                <div class="portrait-card-title js-mandataire">
                                    <%= portraits.find(el=> el.id === representation.id_portrait).prenom %> <%=
                                            portraits.find(el=> el.id === representation.id_portrait).nom %> %>
                                </div>
                                <a href="/portrait?id=<%= portraits.find(el => el.id === representation.id_portrait).id %>"
                                    class="no-decoration card-edit">
                                    <img src="img/edit.png" width="12px" height="12px" alt="edit">
                                </a>
                                <div class="card-delete" onclick="deleteRepresentation('<%= representation.id %>')">
                                    <img src="img/delete.png" width="12px" height="12px" alt="delete">
                                </div>
                            </div>


                            <% }) %>
                    </div>

                </div>
        </div>
        <div id="modal">
            <h6 id="modal-title">Assignation</h6>
            <div id="modal-content">
                <select id="titre" class="form-select">
                    <option value="null">Choisir un titre</option>
                    <option value="titulaire">Titulaire</option>
                    <option value="suppléant">Suppléant</option>
                </select>
                <select class="form-select" id="portrait">
                    <option value="null">Choisir un portrait</option>
                    <% portraits.forEach(portrait=> { %>
                        <option value="<%= portrait.id %> ">
                            <%= portrait.prenom %>
                                <%= portrait.nom %>
                        </option>
                        <% }) %>
                </select>
            </div>
            <div class="flex-between">
                <div id="modal-close" onclick="closeModal()">Annuler</div>
                <div id="modal-submit" onclick="addRepresentation()">Confirmer</div>
            </div>

        </div>

    </body>
    <script>
        function addRepresentation() {
            let representation = {
                id_mandat: '<%= mandat[0].id %>',
                id_portrait: document.getElementById('portrait').value,
                titre: document.getElementById('titre').value,
            }
            fetch(`http://localhost:7070/api/representations/`, {
                method: "POST",
                headers: {
                    'Content-type': 'application/json'
                },
                body: JSON.stringify(representation)
            })
                .then(res => {
                    console.log("Représentation ajouté : ", res);
                    alert('Représentation ajouté')
                    document.location.reload();
                });
        }

        function deleteRepresentation(id) {
            if (confirm('Voulez-vous vraiment supprimer cette représentation ?')) {
                fetch(`http://localhost:7070/api/representations/${id}`, {
                    method: "DELETE",
                    headers: {
                        'Content-type': 'application/json'
                    }
                })
                document.location.reload();
            }
        }

        function showModal() {
            let modal = document.getElementById('modal');
            modal.style.display = "block";
        }

        function closeModal() {
            let modal = document.getElementById('modal');
            modal.style.display = "none";
        }

        function deleteMandat(id) {
            if (confirm('Voulez-vous vraiment supprimer ce mandat ?')) {
                fetch(`http://localhost:7070/api/mandats/${id}`, {
                    method: "DELETE",
                    headers: {
                        'Content-type': 'application/json'
                    }
                })
                document.location.assign('/mandats');
            }
        }
    </script>

    <script src="/js/index.js"></script>

    </html>
<%- include('includes/header.ejs') %>


    <body>
        <div class="login">
            <div class="login-left">
                <img src="img/logo.png" width="300px" height="300px" class="login-logo">
            </div>
            <div class="login-right">
                <h1 class="login-title">Connectez-vous !</h1>
                <div class="form-container">
                    <form class="form" action="/auth" method="post">
                        <div class="form-icon"><img src="img/form.png" width="32px" height="32px"></div>
                        <div class="form-group">
                            <label for="identifiant" class="form-label">Identifiant</label>
                            <input name="identifiant" id="identifiant" type="text" class="form-input"
                                placeholder="example@gmail.re">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input name="password" id="password" type="password" class="form-input" placeholder="...">
                        </div>
                        <div class="remember-field"><input type="checkbox" name="remember"
                                class="remember-checkbox"><span class="remember-text">Se rappeler de
                                moi</span></div>

                        <input type="submit" class="cta" value="Me connecter">
                    </form>
                </div>
            </div>
        </div>

    </body>
    <script src="/js/index.js"></script>

    </html>